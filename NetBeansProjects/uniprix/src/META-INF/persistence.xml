<?xml version="1.0" encoding="ISO-8859-1"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="BasePU" transaction-type="RESOURCE_LOCAL">
        <class>com.uniprix.model.Article</class>
        <class>com.uniprix.model.Produit</class>
        <class>com.uniprix.model.Categorie</class>
        <class>com.uniprix.model.Client</class>
        <class>com.uniprix.model.Login</class>
        <class>com.uniprix.model.Role</class>
        <class>com.uniprix.model.Commande</class>
        <class>com.uniprix.model.LigneCommande</class>
        <class>com.uniprix.model.LignePanier</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.password" value="" />
            <property name="hibernate.connection.url" value="jdbc:mysql://127.0.0.1:3306/uniprix" />
            <property name="hibernate.connection.username" value="root" />
            <property name="hibernate.hbm2ddl.auto" value="none" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        </properties>
    </persistence-unit>
</persistence>